@{
    ViewBag.Title = "Items";
}

@{Layout = null;  }


<h2>Items</h2>

<div class="container">
    
    <div class="registration">
        <div class="registration_left">
            <h2> <span> Enter Item Details </span></h2>
            <!-- [if IE]
               < link rel='stylesheet' type='text/css' href='ie.css'/>
            [endif] -->
            <!-- [if lt IE 7]>
               < link rel='stylesheet' type='text/css' href='ie6.css'/>
            <! [endif] -->
            <script>
                (function () {

                    // Create input element for testing
                    var inputs = document.createElement('input');

                    // Create the supports object
                    var supports = {};

                    supports.autofocus = 'autofocus' in inputs;
                    supports.required = 'required' in inputs;
                    supports.placeholder = 'placeholder' in inputs;

                    // Fallback for autofocus attribute
                    if (!supports.autofocus) {

                    }

                    // Fallback for required attribute
                    if (!supports.required) {

                    }

                    // Fallback for placeholder attribute
                    if (!supports.placeholder) {

                    }

                    // Change text inside send button on submit
                    var send = document.getElementById('register-submit');
                    if (send) {
                        send.onclick = function () {
                            this.innerHTML = '...Sending';
                        }
                    }

                })();
            </script>
            <div class="registration_form">
                <!-- Form -->
                <form id="registration_form" action="/Admin/addItems" enctype="multipart/form-data" method="post">
                    
                    <div>
                        <label>
                            <input placeholder="Item Name" name="itemName" type="text" tabindex="1" required autofocus>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Price" name="itemPrice" type="text" tabindex="2" required autofocus>
                        </label>
                    </div>
                    <br>


                    <div>
                        <label>
                            <input placeholder="Item Description" name="itemDescription" type="text" tabindex="3" required>
                        </label>
                    </div>

                    <br>

                    <div>
                        <label>

                            Select Item Type:
                            <br><br>
                            <select name="itemType">
                                <option> SOFAS  </option>
                                <option> TABLES  </option>
                                <option> BEDS  </option>
                                <option> SEATING  </option>
                                <option>  SOLID WOODS </option>
                            </select>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Subtype" name="itemSubType" type="text" tabindex="3" required>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Quantity" name="itemQuantity" type="text" tabindex="3" required>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input name="image" type="file" tabindex="3" required>
                        </label>
                    </div>
                    <br>



                    <div>
                        <input type="submit" value="Submit Info" id="register-submit">

                    </div>
                </form>
                <!-- /Form -->
            </div>
        </div>
        <div class="registration_left">

          @model  List<FurnyishStore.Models.FurnitureTable>
           
            <h2>List of Items</h2>
            <table>
                <tr>
                    <td> <b> ItemID  </b></td> 
                    <td> <b> ItemName  </b> </td>  
                    <td> <b> ItemPrice </b> </td> 
                    <td>  <b> ItemDescription </b> </td>  
                    <td> <b> ItemType  </b></td>  
                    <td> <b>ItemSubType </b></td>  
                    <td> <b> ItemQuantity  </b></td>  
                </tr>

                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td> 
                        <td>@s.ItemName</td> 
                        <td>@s.ItemPrice</td> 
                        <td>@s.ItemDescription </td> 
                        <td>@s.ItemType </td>  
                        <td>@s.ItemSubType </td> 
                        <td>@s.ItemQuantity </td> 

                        <td>
                            <a href="/Admin/Delete/@s.Id">Delete</a>
                            <a href="/Admin/Update/@s.Id">Update </a>
                            <a href="/Admin/addToDisplay/@s.Id">Add to Display </a>

                        </td>
                    </tr>
                }
            </table>
