@{
    ViewBag.Title = "Update";
}

@model  FurnyishStore.Models.FurnitureTable


<h2>Update Items</h2>


<div class="container">

    <div class="registration">
        <div class="registration_left">
            <h2> <span> Enter Item Details </span></h2>
            <!-- [if IE]
               < link rel='stylesheet' type='text/css' href='ie.css'/>
            [endif] -->
            <!-- [if lt IE 7]>
               < link rel='stylesheet' type='text/css' href='ie6.css'/>
            <! [endif] -->
            <script>
                (function () {

                    // Create input element for testing
                    var inputs = document.createElement('input');

                    // Create the supports object
                    var supports = {};

                    supports.autofocus = 'autofocus' in inputs;
                    supports.required = 'required' in inputs;
                    supports.placeholder = 'placeholder' in inputs;

                    // Fallback for autofocus attribute
                    if (!supports.autofocus) {

                    }

                    // Fallback for required attribute
                    if (!supports.required) {

                    }

                    // Fallback for placeholder attribute
                    if (!supports.placeholder) {

                    }

                    // Change text inside send button on submit
                    var send = document.getElementById('register-submit');
                    if (send) {
                        send.onclick = function () {
                            this.innerHTML = '...Sending';
                        }
                    }

                })();
            </script>
            <div class="registration_form">
                <!-- Form -->
                <form id="registration_form" action="/Admin/UpdateOK/@Model.Id" enctype="multipart/form-data" method="post">

                    <div>
                        <label>
                            <input placeholder="Item Name" name="itemName" value="@Model.ItemName" type="text" tabindex="1" required autofocus>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Price" name="itemPrice" value="@Model.ItemPrice" type="text" tabindex="2" required autofocus>
                        </label>
                    </div>
                    <br>


                    <div>
                        <label>
                            <input placeholder="Item Description" name="itemDescription" value="@Model.ItemDescription" type="text" tabindex="3" required>
                        </label>
                    </div>

                    <br>

                    <div>
                        <label>

                            Select Item Type:
                            <br><br>
                            <select name="itemType">
                                <option> SOFAS  </option>
                                <option> TABLES  </option>
                                <option> BEDS  </option>
                                <option> SEATING  </option>
                                <option>  SOLID WOODS </option>
                            </select>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Subtype" name="itemSubType" value="@Model.ItemSubType" type="text" tabindex="3" required>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input placeholder="Item Quantity" name="itemQuantity" value="@Model.ItemQuantity" type="text" tabindex="3" required>
                        </label>
                    </div>
                    <br>

                    <div>
                        <label>
                            <input name="image" type="file" tabindex="3" required>
                        </label>
                    </div>
                    <br>



                    <div>
                        <input type="submit" value="Submit Info" id="register-submit">

                    </div>
                </form>
                <!-- /Form -->
            </div>
        </div>
        <div class="registration_left">
